<Window x:Class="ATS_TwoWheeler_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ATS_TwoWheeler_WPF.ViewModels"
        xmlns:controls="clr-namespace:ATS_TwoWheeler_WPF.Views.Controls"
        mc:Ignorable="d"
        Title="ATS Two-Wheeler Weight System (Refactored)" Height="900" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#FFF5F5F5"
        Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Window.Resources>
        
        <Style TargetType="Button" x:Key="HeaderButton">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Settings -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Logo/Title -->
                    <ColumnDefinition Width="*"/>    <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/> <!-- Connection Controls -->
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/AVL_Logo.jpg" Width="40" Height="40" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ATS Two-Wheeler System" Foreground="White" 
                                   FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Weight Measurement Monitor" Foreground="#FFBDC3C7" 
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" DataContext="{Binding Connection}">
                    <Button Content="{Binding ConnectionButtonText}" Command="{Binding ConnectCommand}" 
                            Style="{StaticResource HeaderButton}"
                            Background="{Binding ConnectionButtonColor}"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="âš™ Settings" Command="{Binding DataContext.ToggleSettingsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource HeaderButton}"
                            Background="#FF7F8C8D"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Settings Panel -->
        <Border Grid.Row="1" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="0,0,0,1" 
                Padding="20"
                Visibility="{Binding IsSettingsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="System Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FF2C3E50"/>
                <controls:ConnectionConfigurationPanel DataContext="{Binding Connection}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                 <!-- Main Dashboard (Weight Display) -->
                 <controls:DashboardPanel DataContext="{Binding Dashboard}" Margin="0,0,0,20"/>
                 
                 <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- System Status -->
                    <controls:SystemStatusPanel Grid.Column="0" DataContext="{Binding SystemStatus}" Margin="0,0,10,0"/>
                    
                    <!-- Data Logging -->
                    <controls:LoggingPanel Grid.Column="1" DataContext="{Binding Logging}" Margin="10,0,0,0"/>
                 </Grid>
                 
                 <!-- Calibration Actions -->
                 <GroupBox Header="Calibration &amp; Controls" Margin="0,20,0,0" Padding="10">
                    <controls:CalibrationPanel DataContext="{Binding Calibration}"/>
                 </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <controls:AppStatusBar Grid.Row="3" DataContext="{Binding StatusBar}"/>
        
    </Grid>
</Window>