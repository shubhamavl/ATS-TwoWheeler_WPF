<Window x:Class="ATS_TwoWheeler_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ATS_TwoWheeler_WPF.ViewModels"
        xmlns:controls="clr-namespace:ATS_TwoWheeler_WPF.Views.Controls"
        mc:Ignorable="d"
        Title="ATS Two-Wheeler Weight System" Height="900" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#FFF5F5F5"
        Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Window.Resources>
        
        <Style TargetType="Button" x:Key="HeaderButton">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF95A5A6"/>
                                <Setter Property="Foreground" Value="#FFBDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Settings -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Status Items Left (Logo, CAN Bitrate) -->
                    <ColumnDefinition Width="*"/>    <!-- Center (Operation Buttons) -->
                    <ColumnDefinition Width="Auto"/> <!-- Status Items Right (Status, ADC, Rate) -->
                </Grid.ColumnDefinitions>
                
                <!-- Left Section: Logo and CAN Info -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FF34495E" CornerRadius="2" Padding="4" Margin="0,0,15,0">
                        <TextBlock Text="AVL âš™" Foreground="White" FontSize="10" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{Binding Connection.SelectedBaudRate, StringFormat='CAN: {0}'}" 
                               Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="13"/>
                </StackPanel>

                <!-- Center Section: Operation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="{Binding Connection.ConnectionButtonText}" Command="{Binding Connection.ConnectCommand}" 
                            Style="{StaticResource HeaderButton}"
                            Background="{Binding Connection.ConnectionButtonColor}"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="â–¶ Start Stream" Command="{Binding Connection.StartStreamCommand}"
                            Style="{StaticResource HeaderButton}"
                            Background="#FF28A745"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="â¹ Stop All" Command="{Binding StopAllCommand}"
                            Style="{StaticResource HeaderButton}"
                            Background="#FFDC3545"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="âš™ Settings" Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource HeaderButton}"
                            Background="#FF7F8C8D"
                            Margin="0,0,8,0"/>
                    
                    <Button x:Name="ToolsButton" Content="ðŸ”§ Tools"
                            Click="ToolsButton_Click"
                            Style="{StaticResource HeaderButton}"
                            Background="#FF7F8C8D">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Configuration Viewer" Command="{Binding OpenConfigViewerCommand}"/>
                                <Separator/>
                                <MenuItem Header="Bootloader Manager" Command="{Binding Calibration.OpenBootloaderCommand}"/>
                                <MenuItem Header="Monitor Window" Command="{Binding Calibration.OpenMonitorCommand}"/>
                                <MenuItem Header="Logs Window" Command="{Binding Calibration.OpenLogsCommand}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>

                <!-- Right Section: Status and Rate Selector -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Connectivity:" Foreground="#FFBDC3C7" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <Ellipse Width="10" Height="10" Fill="{Binding Connection.StatusColor}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Connection.ConnectionStatusText}" Foreground="White" FontWeight="SemiBold" Margin="0,0,15,0" VerticalAlignment="Center"/>

                    <TextBlock Text="Rate:" Foreground="#FFBDC3C7" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Connection.StreamingRates}" 
                              SelectedItem="{Binding Connection.SelectedStreamingRate}"
                              Width="75" Height="24" Padding="5,0" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                 <!-- Operational Area: Live Weight Data & Controls -->
                 <GroupBox Header="Live Weight Data" Margin="0,0,0,20" Padding="10">
                    <StackPanel>
                        <controls:DashboardPanel DataContext="{Binding Dashboard}"/>
                        <controls:CalibrationPanel DataContext="{Binding Calibration}" Margin="0,10,0,0"/>
                    </StackPanel>
                 </GroupBox>

                 <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- System Status -->
                    <controls:SystemStatusPanel Grid.Column="0" DataContext="{Binding SystemStatus}" Margin="0,0,10,0"/>
                    
                    <!-- Data Logging -->
                    <controls:LoggingPanel Grid.Column="1" DataContext="{Binding Logging}" Margin="10,0,0,0"/>
                 </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <controls:AppStatusBar Grid.Row="3" DataContext="{Binding StatusBar}"/>
        
    </Grid>
</Window>