<UserControl x:Class="ATS_TwoWheeler_WPF.Views.Controls.SystemStatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATS_TwoWheeler_WPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Style="{StaticResource DataCard}" BorderBrush="#FF17A2B8" BorderThickness="2" Background="White" CornerRadius="4">
        <Border.Effect>
            <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
        </Border.Effect>
        <StackPanel Margin="15">
            <TextBlock Text="SYSTEM STATUS" FontWeight="Bold" FontSize="18" 
                       Foreground="#FF34495E"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Status:" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Ellipse Width="12" Height="12" Fill="{Binding StatusColor}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusText}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Text="Relay:" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding RelayStateText}" Foreground="{Binding RelayStateColor}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Row 1 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="CAN Rate:" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CanRateText}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="#FF34495E"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Text="ADC Rate:" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding AdcRateText}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Foreground="#FF17A2B8"/>
                </StackPanel>

                <!-- Row 2 -->
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Uptime:" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding UptimeText}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,15">
                    <TextBlock Text="Firmware:" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding FirmwareVersionText}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Row 3: Last Data Received -->
                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5,0,10">
                    <TextBlock Text="Last Data Received:" FontSize="13" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="#FF95A5A6" FontStyle="Italic"/>
                    <TextBlock Text="{Binding LastUpdateText}" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#FF7F8C8D"/>
                </StackPanel>
            </Grid>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Status" Command="{Binding RequestStatusCommand}"
                        Style="{StaticResource ModernButton}" 
                        Background="#FF17A2B8" 
                        Width="70" Height="30" Margin="2,0"/>
                <Button Content="History" Command="{Binding ShowHistoryCommand}"
                        Style="{StaticResource ModernButton}" 
                        Background="#FF6F42C1" 
                        Width="70" Height="30" Margin="2,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
