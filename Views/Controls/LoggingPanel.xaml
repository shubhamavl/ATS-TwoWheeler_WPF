<UserControl x:Class="ATS_TwoWheeler_WPF.Views.Controls.LoggingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATS_TwoWheeler_WPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                 <Trigger Property="IsEnabled" Value="False">
                     <Setter Property="Opacity" Value="0.5"/>
                 </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border Style="{StaticResource DataCard}" BorderBrush="#FF28A745" BorderThickness="2" Background="White" CornerRadius="4">
        <Border.Effect>
            <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
        </Border.Effect>
        <StackPanel Margin="15">
            <TextBlock Text="DATA LOGGING" FontWeight="Bold" FontSize="18" 
                       Foreground="#FF28A745"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                <Ellipse Width="14" Height="14" Fill="{Binding StatusColor}" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding StatusText}" FontSize="15" FontWeight="SemiBold"/>
            </StackPanel>
            
            <TextBlock Text="{Binding SampleCount, StringFormat='{}{0} samples'}" FontSize="15" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,15" Foreground="#FF28A745"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <Button Content="Start" Command="{Binding StartLoggingCommand}"
                        Style="{StaticResource ModernButton}" Background="#FF28A745" 
                        Width="70" Height="32" Margin="2,0"/>
                <Button Content="Stop" Command="{Binding StopLoggingCommand}"
                        Style="{StaticResource ModernButton}" Background="#FFDC3545" 
                        Width="70" Height="32" Margin="2,0"/>
            </StackPanel>
            
            <Button Content="Export CSV" Command="{Binding ExportLogCommand}"
                    Style="{StaticResource ModernButton}" Background="#FF17A2B8" 
                    Height="32" Margin="0,5,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
