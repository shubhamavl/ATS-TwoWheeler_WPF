<Window x:Class="ATS_TwoWheeler_WPF.Views.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ATS_TwoWheeler_WPF.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:LogsViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ATS Two-Wheeler Weight Measurement System Monitor - Production Logs" Height="600" Width="1000" 
        MinWidth="800" MinHeight="500" MaxWidth="2000" MaxHeight="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A252F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Controls -->
            <RowDefinition Height="Auto"/> <!-- Filter checkboxes -->
            <RowDefinition Height="*"/>    <!-- Log messages (MAIN AREA) -->
            <RowDefinition Height="Auto"/> <!-- Status bar with buttons -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Row 0: Header -->
        <Border Grid.Row="0" Background="#FF5D6D7E" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Assets/AVL_Logo.jpg" Width="50" Height="50" Margin="0,0,15,0" 
                       VerticalAlignment="Center"/>
                <TextBlock Text="Production Logs" FontSize="22" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Row 1: Controls (Enable logging, Min level) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,10">
            <CheckBox Content="Data Logging Active" IsChecked="{Binding IsLogging, Mode=OneWay}" 
                      VerticalAlignment="Center" Margin="0,0,20,0" IsEnabled="False" 
                      ToolTip="Shows data logging status. Control logging from Main Window Start/Stop buttons."/>
            <TextBlock Text="Min Level:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="100" SelectedIndex="0">
                <ComboBoxItem Content="Info"/>
                <ComboBoxItem Content="Warning"/>
                <ComboBoxItem Content="Error"/>
                <ComboBoxItem Content="Critical"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Row 2: Filter checkboxes -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,5">
            <TextBlock Text="Show:" Margin="0,0,10,0"/>
            <CheckBox Content="Info" IsChecked="{Binding ShowInfo}" 
                      VerticalAlignment="Center" Margin="0,0,15,0"/>
            <CheckBox Content="Warning" IsChecked="{Binding ShowWarning}" 
                      VerticalAlignment="Center" Margin="0,0,15,0"/>
            <CheckBox Content="Error" IsChecked="{Binding ShowError}" 
                      VerticalAlignment="Center" Margin="0,0,15,0"/>
            <CheckBox Content="Critical" IsChecked="{Binding ShowCritical}" 
                      VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Row 3: Log messages area (takes most space) -->
        <Border Grid.Row="3" BorderBrush="#FFCCCCCC" BorderThickness="1" Margin="15,10">
            <ListBox ItemsSource="{Binding FilteredLogEntries}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FormattedMessage}" FontFamily="Consolas" FontSize="11"/>
                            <TextBlock Text="{Binding Source}" FontSize="9" Foreground="Gray" Margin="20,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        
        <!-- Row 4: Status bar with entry count and buttons -->
        <Grid Grid.Row="4" Background="#FFF0F0F0" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="{Binding FilteredLogEntries.Count, StringFormat='{}{0} entries'}" VerticalAlignment="Center" 
                       Margin="15,0" FontWeight="SemiBold"/>
            
            <Button Grid.Column="1" Content="Clear Logs" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FFDC3545" Width="120" Height="35" Margin="5"
                    Command="{Binding ClearLogsCommand}"/>
            
            <Button Grid.Column="2" Content="Export CSV" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FF17A2B8" Width="120" Height="35" Margin="5"
                    Command="{Binding ExportLogsCommand}"/>

            <Button Grid.Column="3" Content="Open Folder" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FF28A745" Width="120" Height="35" Margin="5,5,15,5"
                    Command="{Binding OpenLogsFolderCommand}"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="5" Background="#FF5D6D7E" Padding="8,4">
            <TextBlock Text="Â© 2025 AVL India Pvt Ltd. All rights reserved." 
                       Foreground="White" FontSize="10" Opacity="0.8" 
                       HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
