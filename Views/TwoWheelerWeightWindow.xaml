<Window x:Class="ATS_TwoWheeler_WPF.Views.TwoWheelerWeightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:vm="clr-namespace:ATS_TwoWheeler_WPF.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:TwoWheelerWeightViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Two Wheeler Weight Test" Height="800" Width="1400"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="pack://application:,,,/Assets/AVL_Icon.ico"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="AxleNoText" Text="Axle 1" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock Text="ðŸš— Two Wheeler Weight Test" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Ellipse Width="12" Height="12" 
                              Fill="{Binding ConnectionColor}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding DataRateText}" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="1" Background="#FFE8F5E9" BorderBrush="#FF4CAF50" 
                BorderThickness="0,0,0,2" Padding="10,8">
            <TextBlock Text="{Binding StatusDescription}" 
                       FontSize="18" FontWeight="Bold"
                       Foreground="#FF2E7D32"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Total Weight Display Panel with Validation Indicator -->
        <Grid Grid.Row="2" Background="#FFF0F0F0" Margin="10,5">
            <Border Margin="10" Background="#FFE3F2FD" 
                    BorderBrush="#FF2196F3" BorderThickness="2" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Total Weight" 
                               FontSize="32" FontWeight="Bold" 
                               Foreground="#FF1565C0" 
                               HorizontalAlignment="Center" Margin="0,10"/>
                    
                    <!-- Validation Indicator Rectangle -->
                    <Border Grid.Row="1" 
                            Width="60" Height="250" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Background="{Binding ValidationColor}" 
                            BorderBrush="#FF000000" 
                            BorderThickness="2" 
                            Margin="0,10"/>
                    
                    <!-- Weight Display Box -->
                    <Border Grid.Row="2" 
                            Background="#FFFF9800" 
                            BorderBrush="#FFE65100" 
                            BorderThickness="2" 
                            CornerRadius="3" 
                            Margin="20,10" 
                            Padding="10,15">
                        <TextBlock Text="{Binding MainWeightText}" 
                                   FontSize="48" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="White"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Info Panel -->
        <Border Grid.Row="3" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                BorderThickness="0,0,0,1" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Total Weight -->
                    <TextBlock Text="Total:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalWeightText}" Margin="0,0,20,0" FontWeight="Bold"/>
                    
                    
                    <!-- Min Weight -->
                    <TextBlock Text="Min:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding MinWeightText}" Margin="0,0,20,0"/>
                    
                    <!-- Max Weight -->
                    <TextBlock Text="Max:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding MaxWeightText}" Margin="0,0,20,0"/>
                    
                    <!-- Samples -->
                    <TextBlock Text="Samples:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding SampleCount}"/>
                </StackPanel>
                
            </Grid>
        </Border>

        <!-- Graph Area -->
        <Grid Grid.Row="4" Margin="10">
            <lvc:CartesianChart Series="{Binding Series}" 
                               XAxes="{Binding XAxes}" 
                               YAxes="{Binding YAxes}" />
        </Grid>

        <!-- Control Panel -->
        <Border Grid.Row="5" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                BorderThickness="0,1,0,0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="F1 - Start" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF28A745" Command="{Binding StartTestCommand}" 
                        Width="120" Height="40" Margin="5,0" FontSize="16" FontWeight="Bold"/>
                <Button Content="F2 - Stop" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FFDC3545" Command="{Binding StopTestCommand}" 
                        Width="120" Height="40" Margin="5,0" FontSize="16" FontWeight="Bold"/>
                <Button Content="F3 - Save" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF17A2B8" Command="{Binding SaveTestCommand}" 
                        Width="120" Height="40" Margin="5,0" FontSize="16" FontWeight="Bold"/>
                <Button Content="â¸ Pause" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF6C757D" Command="{Binding PauseTestCommand}" 
                        Width="100" Height="32" Margin="5,0"/>
                <Button Content="ðŸ—‘ Clear" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF95A5A6" Command="{Binding ClearDataCommand}" 
                        Width="100" Height="32" Margin="5,0"/>
                <Button Content="ðŸ’¾ Export CSV" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF6F42C1" Command="{Binding ExportCommand}" 
                        Width="120" Height="32" Margin="5,0"/>
                <ToggleButton Content="ðŸ›‘ Brake Mode"
                        Style="{StaticResource ModernToggleButton}"
                        Background="#FF6C757D" Command="{Binding SwitchSystemModeCommand}"
                        Width="120" Height="32" Margin="5,0"/>
                <Button Content="âš– Calibrate" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF17A2B8" 
                        Width="120" Height="32" Margin="5,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
