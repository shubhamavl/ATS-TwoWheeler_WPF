<Window x:Class="ATS_TwoWheeler_WPF.Views.BootloaderManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bootloader Manager" Height="700" Width="900"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF5F5F5">

    <!-- Wrap main content in a ScrollViewer so the dialog remains usable on smaller screens -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Use Auto for diagnostics as well so total content height can exceed the window and ScrollViewer can scroll -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Status -->
        <GroupBox Header="System Status" Grid.Row="0" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="BootloaderStatusText" Text="{Binding BootloaderStatusText}" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="FirmwareVersionText" Text="{Binding FirmwareVersionText}" FontSize="11"/>
                    <TextBlock x:Name="LastUpdateText" Text="{Binding LastUpdateText}" FontSize="11" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Process Steps Indicator -->
        <GroupBox Header="Update Process Steps" Grid.Row="1" Margin="0,0,0,10" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Step 1: Enter Bootloader -->
                <StackPanel Margin="0,0,15,0" MinWidth="100">
                    <Border x:Name="Step1Border" Background="#E0E0E0" BorderThickness="2" BorderBrush="#9E9E9E" 
                            CornerRadius="4" Padding="8" MinWidth="100">
                        <StackPanel>
                            <TextBlock x:Name="Step1Icon" Text="â³" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Enter" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Bootloader" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Step1Status" Text="Pending" FontSize="9" HorizontalAlignment="Center" 
                                      Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Arrow -->
                <TextBlock Text="â†’" FontSize="20" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#9E9E9E"/>
                
                <!-- Step 2: Ping -->
                <StackPanel Margin="0,0,15,0" MinWidth="100">
                    <Border x:Name="Step2Border" Background="#E0E0E0" BorderThickness="2" BorderBrush="#9E9E9E" 
                            CornerRadius="4" Padding="8" MinWidth="100">
                        <StackPanel>
                            <TextBlock x:Name="Step2Icon" Text="â³" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Ping" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Response" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Step2Status" Text="Pending" FontSize="9" HorizontalAlignment="Center" 
                                      Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Arrow -->
                <TextBlock Text="â†’" FontSize="20" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#9E9E9E"/>
                
                <!-- Step 3: Begin -->
                <StackPanel Margin="0,0,15,0" MinWidth="100">
                    <Border x:Name="Step3Border" Background="#E0E0E0" BorderThickness="2" BorderBrush="#9E9E9E" 
                            CornerRadius="4" Padding="8" MinWidth="100">
                        <StackPanel>
                            <TextBlock x:Name="Step3Icon" Text="â³" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Begin" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Update" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Step3Status" Text="Pending" FontSize="9" HorizontalAlignment="Center" 
                                      Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Arrow -->
                <TextBlock Text="â†’" FontSize="20" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#9E9E9E"/>
                
                <!-- Step 4: Transfer -->
                <StackPanel Margin="0,0,15,0" MinWidth="100">
                    <Border x:Name="Step4Border" Background="#E0E0E0" BorderThickness="2" BorderBrush="#9E9E9E" 
                            CornerRadius="4" Padding="8" MinWidth="100">
                        <StackPanel>
                            <TextBlock x:Name="Step4Icon" Text="â³" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Transfer" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Data" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Step4Status" Text="Pending" FontSize="9" HorizontalAlignment="Center" 
                                      Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Arrow -->
                <TextBlock Text="â†’" FontSize="20" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#9E9E9E"/>
                
                <!-- Step 5: End -->
                <StackPanel Margin="0,0,15,0" MinWidth="100">
                    <Border x:Name="Step5Border" Background="#E0E0E0" BorderThickness="2" BorderBrush="#9E9E9E" 
                            CornerRadius="4" Padding="8" MinWidth="100">
                        <StackPanel>
                            <TextBlock x:Name="Step5Icon" Text="â³" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="End" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Update" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Step5Status" Text="Pending" FontSize="9" HorizontalAlignment="Center" 
                                      Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Arrow -->
                <TextBlock Text="â†’" FontSize="20" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#9E9E9E"/>
                
                <!-- Step 6: Reset -->
                <StackPanel MinWidth="100">
                    <Border x:Name="Step6Border" Background="#E0E0E0" BorderThickness="2" BorderBrush="#9E9E9E" 
                            CornerRadius="4" Padding="8" MinWidth="100">
                        <StackPanel>
                            <TextBlock x:Name="Step6Icon" Text="â³" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Reset" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="Complete" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Step6Status" Text="Pending" FontSize="9" HorizontalAlignment="Center" 
                                      Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Firmware Update -->
        <GroupBox Header="Firmware Update" Grid.Row="2" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="BrowseFirmwareBtn" Content="ðŸ“‚ Browse" Grid.Column="0" 
                            Command="{Binding BrowseCommand}" Width="100" Margin="0,0,8,0"/>
                    <TextBlock x:Name="FirmwareFilePathText" Text="{Binding FirmwarePath}" Grid.Column="1" 
                               VerticalAlignment="Center" FontSize="11"/>
                    <TextBlock x:Name="FirmwareFileSizeText" Text="{Binding FirmwareSize}" Grid.Column="2" 
                               VerticalAlignment="Center" FontSize="11" Foreground="Gray" Margin="8,0,0,0"/>
                </Grid>
                
                <ProgressBar x:Name="FirmwareProgressBar" Height="20" Minimum="0" Maximum="100" Value="{Binding ProgressValue}" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="FirmwareProgressLabel" Text="{Binding ProgressLabel}" Grid.Column="0" FontSize="11" FontWeight="Bold"/>
                    <TextBlock x:Name="FirmwareTransferRateText" Text="{Binding TransferRate}" Grid.Column="1" FontSize="10" Foreground="Gray"/>
                </Grid>
                
                <!-- Detailed Progress Information -->
                <Border Margin="0,0,0,8" Background="#F5F5F5" Padding="8" BorderThickness="1" BorderBrush="#E0E0E0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Bytes:" Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="Gray"/>
                        <TextBlock x:Name="BytesTransferredText" Text="{Binding BytesTransferred}" Grid.Row="1" Grid.Column="0" FontSize="11" FontWeight="Bold"/>
                        
                        <TextBlock Text="Time:" Grid.Row="0" Grid.Column="1" FontSize="10" Foreground="Gray"/>
                        <TextBlock x:Name="TimeElapsedText" Text="{Binding TimeElapsed}" Grid.Row="1" Grid.Column="1" FontSize="11" FontWeight="Bold"/>
                        
                        <TextBlock Text="Remaining:" Grid.Row="0" Grid.Column="2" FontSize="10" Foreground="Gray"/>
                        <TextBlock x:Name="TimeRemainingText" Text="{Binding TimeRemaining}" Grid.Row="1" Grid.Column="2" FontSize="11" FontWeight="Bold"/>
                    </Grid>
                </Border>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock x:Name="StatusIcon" Text="â³" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock x:Name="FirmwareStatusText" Text="{Binding StatusText}" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="StartFirmwareUpdateBtn" Content="â¬† Start Update" 
                            Command="{Binding StartUpdateCommand}" Width="120" Margin="0,0,8,0" 
                            Background="#4CAF50" Foreground="White" Padding="8,4"/>
                    <Button x:Name="CancelFirmwareUpdateBtn" Content="Cancel" 
                            Command="{Binding CancelUpdateCommand}" Width="100"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Actions -->
        <GroupBox Header="Actions" Grid.Row="3" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <!-- Bootloader Control Buttons -->
                <TextBlock Text="Bootloader Control" FontWeight="Bold" FontSize="11" Margin="0,0,0,6" Foreground="#666"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button x:Name="EnterBootloaderBtn" Content="Enter Bootloader" 
                            Command="{Binding EnterBootloaderCommand}" Width="130" Margin="0,0,8,0"
                            Background="#2196F3" Foreground="White" Padding="8,4"/>
                    <Button x:Name="TestBootloaderBtn" Content="Test Bootloader" 
                            Command="{Binding TestBootloaderCommand}" Width="130" Margin="0,0,8,0"/>
                    <Button x:Name="QueryBootInfoBtn" Content="Query Info" 
                            Command="{Binding QueryInfoCommand}" Width="120" Margin="0,0,8,0"/>
                    <Button x:Name="ResetBtn" Content="Reset STM32" 
                            Command="{Binding ResetCommand}" Width="120"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Diagnostics Tab Control -->
        <!-- Use the stretching row (index 5) so this area grows and scrolls correctly -->
        <TabControl Grid.Row="4" Margin="0,0,0,10">
            <TabItem Header="CAN Messages">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                        <Button x:Name="ClearMessagesBtn" Content="Clear" Command="{Binding ClearMessagesCommand}" Width="80" Margin="0,0,8,0"/>
                        <Button x:Name="ExportMessagesBtn" Content="Export Log" Command="{Binding ExportMessagesCommand}" Width="100"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="MessagesDataGrid" Grid.Row="1" 
                              AutoGenerateColumns="False" IsReadOnly="True" 
                              HeadersVisibility="Column" GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" Width="100"/>
                            <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="60"/>
                            <DataGridTextColumn Header="CAN ID" Binding="{Binding CanId, StringFormat='0x{0:X3}'}" Width="80"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Data" Binding="{Binding DataHex}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Errors">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button x:Name="ClearErrorsBtn" Content="Clear Errors" 
                            Command="{Binding ClearErrorsCommand}" Width="100" 
                            HorizontalAlignment="Left" Margin="0,0,0,8" Grid.Row="0"/>
                    
                    <DataGrid x:Name="ErrorsDataGrid" Grid.Row="1" 
                              AutoGenerateColumns="False" IsReadOnly="True" 
                              HeadersVisibility="Column" GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" Width="100"/>
                            <DataGridTextColumn Header="Error Code" Binding="{Binding ErrorCode, StringFormat='0x{0:X2}'}" Width="80"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Resolution" Binding="{Binding SuggestedResolution}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Operation Log">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                        <Button x:Name="ClearOperationLogBtn" Content="Clear Log" 
                                Command="{Binding ClearOperationLogCommand}" Width="100" Margin="0,0,8,0"/>
                        <Button x:Name="ExportOperationLogBtn" Content="Export Log" 
                                Command="{Binding ExportOperationLogCommand}" Width="100"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="OperationLogDataGrid" Grid.Row="1" 
                              AutoGenerateColumns="False" IsReadOnly="True" 
                              HeadersVisibility="Column" GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" Width="100"/>
                            <DataGridTextColumn Header="Operation" Binding="{Binding Operation}" Width="150"/>
                            <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="60"/>
                            <DataGridTextColumn Header="CAN ID" Binding="{Binding CanId, StringFormat='0x{0:X3}'}" Width="80"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Close Button -->
        <!-- Place the Close button in the final Auto row (index 6) -->
        <Button Content="Close" Grid.Row="6" Width="100" HorizontalAlignment="Right" 
                Click="CloseBtn_Click" Padding="8,4"/>
    </Grid>
    </ScrollViewer>
</Window>

