<Window x:Class="ATS_TwoWheeler_WPF.Views.ConfigurationViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ATS_TwoWheeler_WPF.ViewModels"
        mc:Ignorable="d"
        Title="Configuration &amp; Calibration Details" Height="700" Width="800"
        WindowStartupLocation="CenterOwner" Background="#FFF5F7F9"
        d:DataContext="{d:DesignInstance Type=vm:ConfigurationViewerViewModel}">
    
    <Window.Resources>
        <Style x:Key="ConfigHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ConfigLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF7F8C8D"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ConfigValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ConfigCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#FFE0E4E8"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B5E96" CornerRadius="8" Padding="20,15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ› ï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="System Configuration Viewer" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Technical calibration data and file locations" Foreground="#FFE3F2FD" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TabControl Margin="-2,0,-2,0" Padding="5">
                <TabItem Header="Weight System" FontSize="14" FontWeight="SemiBold">
                    <StackPanel Margin="0,15,0,0">
                        <!-- Internal ADC -->
                        <Border Style="{StaticResource ConfigCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ Internal ADC (12-bit)" Style="{StaticResource ConfigHeader}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding InternalCalStatus}" Style="{StaticResource ConfigValue}" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Slope / Intercept:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding InternalCalSlope, StringFormat='F4', Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding InternalCalIntercept, StringFormat='F2', Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Zero / Full ADC:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding InternalCalZeroPoint, Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding InternalCalKnownWeightAdc, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Calibrated:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding InternalCalDate}" Style="{StaticResource ConfigValue}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="File Path:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding InternalCalFileLocation}" Style="{StaticResource ConfigValue}" FontSize="10" Foreground="Gray"/>
                                </Grid>
                                <Button Content="Reset Internal" Command="{Binding ResetInternalCommand}" 
                                        Background="#FFE74C3C" Foreground="White" Width="120" HorizontalAlignment="Left" Margin="0,15,0,0" Padding="5"/>
                            </StackPanel>
                        </Border>

                        <!-- ADS1115 ADC -->
                        <Border Style="{StaticResource ConfigCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ ADS1115 (16-bit)" Style="{StaticResource ConfigHeader}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AdsCalStatus}" Style="{StaticResource ConfigValue}" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Slope / Intercept:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding AdsCalSlope, StringFormat='F4', Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding AdsCalIntercept, StringFormat='F2', Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Zero / Full ADC:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding AdsCalZeroPoint, Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding AdsCalKnownWeightAdc, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Calibrated:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding AdsCalDate}" Style="{StaticResource ConfigValue}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="File Path:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding AdsCalFileLocation}" Style="{StaticResource ConfigValue}" FontSize="10" Foreground="Gray"/>
                                </Grid>
                                 <Button Content="Reset ADS1115" Command="{Binding ResetAdsCommand}" 
                                        Background="#FFE74C3C" Foreground="White" Width="120" HorizontalAlignment="Left" Margin="0,15,0,0" Padding="5"/>
                            </StackPanel>
                        </Border>

                        <!-- Tare & Data -->
                        <Border Style="{StaticResource ConfigCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‚ Data Locations" Style="{StaticResource ConfigHeader}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tare Baseline:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TareBaseline, StringFormat='F2'}" Style="{StaticResource ConfigValue}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Tare File:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TareFileLocation}" Style="{StaticResource ConfigValue}" FontSize="10" Foreground="Gray"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Data Directory:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DataDirectoryPath}" Style="{StaticResource ConfigValue}" FontSize="10"/>
                                </Grid>
                                <Button Content="Open Data Folder" Command="{Binding OpenDataDirectoryCommand}" 
                                        Background="#FF28A745" Foreground="White" Width="140" HorizontalAlignment="Left" Margin="0,15,0,0" Padding="5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Brake System" FontSize="14" FontWeight="SemiBold">
                    <StackPanel Margin="0,15,0,0">
                         <!-- Internal ADC Brake -->
                        <Border Style="{StaticResource ConfigCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ Internal ADC (Brake)" Style="{StaticResource ConfigHeader}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding InternalCalBrakeStatus}" Style="{StaticResource ConfigValue}" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Slope / Intercept:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding InternalCalBrakeSlope, StringFormat='F4', Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding InternalCalBrakeIntercept, StringFormat='F2', Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Zero / Full ADC:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding InternalCalBrakeZeroPoint, Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding InternalCalBrakeKnownWeightAdc, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Calibrated:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding InternalCalBrakeDate}" Style="{StaticResource ConfigValue}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="File Path:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding InternalCalBrakeFileLocation}" Style="{StaticResource ConfigValue}" FontSize="10" Foreground="Gray"/>
                                </Grid>
                                <Button Content="Reset Internal Brake" Command="{Binding ResetInternalBrakeCommand}" 
                                        Background="#FFE74C3C" Foreground="White" Width="140" HorizontalAlignment="Left" Margin="0,15,0,0" Padding="5"/>
                            </StackPanel>
                        </Border>

                        <!-- ADS1115 ADC Brake -->
                        <Border Style="{StaticResource ConfigCard}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“ ADS1115 (Brake)" Style="{StaticResource ConfigHeader}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AdsCalBrakeStatus}" Style="{StaticResource ConfigValue}" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Slope / Intercept:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding AdsCalBrakeSlope, StringFormat='F4', Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding AdsCalBrakeIntercept, StringFormat='F2', Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Zero / Full ADC:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ConfigValue}">
                                        <Run Text="{Binding AdsCalBrakeZeroPoint, Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding AdsCalBrakeKnownWeightAdc, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Calibrated:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding AdsCalBrakeDate}" Style="{StaticResource ConfigValue}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="File Path:" Style="{StaticResource ConfigLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding AdsCalBrakeFileLocation}" Style="{StaticResource ConfigValue}" FontSize="10" Foreground="Gray"/>
                                </Grid>
                                 <Button Content="Reset ADS1115 Brake" Command="{Binding ResetAdsBrakeCommand}" 
                                        Background="#FFE74C3C" Foreground="White" Width="140" HorizontalAlignment="Left" Margin="0,15,0,0" Padding="5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFE9ECEF" CornerRadius="0,0,8,8" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Width="100" Margin="0,0,10,0"/>
                <Button Content="Close" IsCancel="True" Width="100" Background="#FF6C757D" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
